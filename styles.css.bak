body {
    font-family: Arial, sans-serif;
    background-color: #f7f7f7;
    margin: 0;
    padding: 0;
}

.container {
    text-align: center;
    margin: 400px auto;
    max-width: 100px;
    background-image: url('https://e0.pxfuel.com/wallpapers/495/982/desktop-wallpaper-live-clock-black-clock.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

h1 {
    color: #007bff;
}

.timer {
    font-size: 40px;
    margin-bottom: 20px;
    color: #333;
}

.btn-group {
    margin-top: 20px;
}
